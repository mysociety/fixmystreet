---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

    <title>FixMyStreet Platform</title>
    <link href="http://fixmystreet.org/atom.xml" rel="self"/>
    <link href="http://fixmystreet.org/"/>
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <id>http://fixmystreet.org/</id>
    <author>
        <name>mySociety</name>
    </author>

    {% for post in site.posts %}
    <entry>
        <title>{{ post.title }}</title>
        <link href="http://fixmystreet.org{{ post.url }}"/>
        <updated>{{ post.date | date_to_xmlschema }}</updated>
        <id>http://fixmystreet.org{{ post.id }}</id>
        <content type="html">{{ post.content | xml_escape }}</content>
    </entry>
    {% endfor %}

</feed>
