#!/usr/bin/env perl

use v5.14;
use warnings;

BEGIN {
    use File::Basename qw(dirname);
    use File::Spec;
    my $d = dirname(File::Spec->rel2abs($0));
    require "$d/../../setenv.pl";
}

use Getopt::Long::Descriptive;
use CronFns;
use FixMyStreet::Cobrand;

my $site = CronFns::site(FixMyStreet->config('BASE_URL'));
CronFns::language($site);

my ($opts, $usage) = describe_options(
    '%c %o',
    ['nomail|n', 'do not actually send any email'],
    ['verbose|v', 'more verbose output'],
    ['cobrand=s@', 'which cobrand(s) to send reminders for'],
    ['help|h', "print usage message and exit" ],
);
$usage->die if $opts->help;
$usage->die unless $opts->cobrand;

foreach (@{$opts->cobrand}) {
    my $cobrand = FixMyStreet::Cobrand->get_class_for_moniker($_)->new;
    $cobrand->bulky_reminders({
        nomail => $opts->nomail,
        verbose => $opts->verbose,
    });
}
